{
    "name": "mp3-file-analysis",
    "version": "0.0.1",
    "description": "A service which returns a frame count for an MP3 file",
    "main": "./.dist/start.js",
    "scripts": {
        "start": "PRETTY_PRINT=false node .dist/start.js",
        "start:dev": "PRETTY_PRINT=true nodemon start.ts -r ts-node/register --inspect=9229",
        "test": "vitest",
        "test:verbose": "PRETTY_PRINT=true LOG_LEVEL=debug vitest",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,cjs,mjs}\""
    },
    "author": "Mark Hammond",
    "dependencies": {
        "@fastify/cors": "^11.1.0",
        "@fastify/multipart": "^9.3.0",
        "@fastify/request-context": "^6.2.1",
        "@fastify/swagger": "^9.6.1",
        "@fastify/swagger-ui": "^5.2.3",
        "convict": "^6.2.4",
        "fastify": "^5.6.2",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.3"
    },
    "devDependencies": {
        "@types/convict": "^6.1.6",
        "@types/node": "^20.19.25",
        "is-port-reachable": "^3.0.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.7.3",
        "ts-node": "^10.9.2",
        "typescript": "5.2.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    }
}
